        <Label x:Name="lblNazwaFaktury" Content="Nazwa faktury" HorizontalAlignment="Left" Height="42" Margin="10,52,0,0" VerticalAlignment="Top" Width="266" FontSize="17"/>
        <TextBox HorizontalAlignment="Center" Height="33" Margin="0,152,0,0" Text="10-06-2020" TextWrapping="Wrap" VerticalAlignment="Top" Width="126"/>
        <Label x:Name="lblData" Content="Data opłacenia (DD-MM-RRRR):" HorizontalAlignment="Left" Height="42" Margin="10,93,0,0" VerticalAlignment="Top" Width="256" FontSize="17"/>

    </Grid>
</Window>
